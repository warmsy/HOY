<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.smhrd.mapper.chMapper">

	  <select id ="kind1" resultType="kr.smhrd.mapper.ChallengesVO">    
       select *  from challenges 
       where ch_kind = 1
          </select>
          
	  <select id ="kind2" resultType="kr.smhrd.mapper.ChallengesVO">    
       select *  from challenges 
       where ch_kind = 2
          </select>
          
	  <select id ="kind3" resultType="kr.smhrd.mapper.ChallengesVO">    
       select *  from challenges 
       where ch_kind = 3
          </select>
          
	  <select id ="contents" resultType="kr.smhrd.mapper.ChallengesVO">    
       select *  from challenges 
       where ch_seq = #{ch_seq}
          </select>
          
	  
	 

	
	

</mapper>
    